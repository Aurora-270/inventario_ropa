<%- layout('layouts/main') %>

<div class="row">
    <div class="col-md-4 offset-md-4">
      <div class="card text-white bg-dark mt-4 text-center">
        <div class="card-header">
          <h4>Editar vestido</h4>
        </div>
        <div class="card-body">
            <form action="/editar-vestido/<%= editar_m._id %>" method="POST">
                <div class="form-group mb-3">
                  <input type="text" name="Marca" value="<%= editar_m.Marca%>" class="form-control">
                </div> 
                <div class="form-group mb-3">
                  <input type="text" name="Modelo" value="<%= editar_m.Modelo%>" class="form-control">
                </div> 
                <div class="form-group mb-3">
                  <input type="text" name="Talla" value="<%= editar_m.Talla%>" class="form-control">
                </div> 
                <div class="form-group mb-3">
                  <input type="text" name="Color" value="<%= editar_m.Color%>" class="form-control">
                </div> 
                <div class="form-group mb-3">
                  <input type="text" name="Precio" value="<%= editar_m.Precio%>" class="form-control">
                </div> 
                <div class="form-group mb-3">
                  <input type="text" name="Cantidad" value="<%= editar_m.Cantidad%>" class="form-control">
                </div> 
                <div class="form-group mb-3 d-grid gap-2 col-6 mx-auto">
                    <button type="submit" class="btn btn-outline-success">Editar</button>
                </div>                                           
            </form>
        </div>
      </div>
    </div>
  </div>
 